{{template "base/head" .}}
<div class="explore subjects">
	<div class="ui container">
		<div class="ui grid">
			{{template "explore/navbar" .}}
			<div class="twelve wide column content">
				{{template "explore/search" .}}
				<div class="ui subject list">
					{{range .Subjects}}
						<div class="item">
						  <img class="ui avatar image" src="{{AppSubUrl}}/img/subject.png">
						  <div class="content">
						  	<span class="header" style="margin-top: 3%;"><a href="/explore/repos?q={{.Name}}">{{.Name}}</a></span>
						  </div>
						</div>
					{{end}}
				</div>
				{{template "explore/page" .}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
