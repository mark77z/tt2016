{{template "base/head" .}}
<div class="repository commits">
	{{template "repo/header" .}}
	<div class="ui container">

		{{ .RepoStadistics.Modifications.Insertions}}  |  {{ .RepoStadistics.Modifications.Deletions}}  |  {{ .RepoStadistics.Modifications.Author}}
		<br>
		<br>
		{{range .UserStadistics}}
			{{ .User.FullName}}
			<br>
			Modificaciones: {{ .Modifications.Insertions}}  |  {{ .Modifications.Deletions}}  |  {{ .Modifications.Author}}
			<br>
			{{range .Commits.Info}}
				Commits {{ .NumCommits}}  |  {{ .Date}}  |  {{ .User}}
			{{end}}
			<br>
			Total commits : {{ .Commits.Total}}
			<br>
			<br>
		{{end}}

		
	</div>
</div>
{{template "base/footer" .}}
